def showSNPositions(fileNum):
    sn_storer = RawSNDataStorer(fileNum, RA_lims = [0.0, 360.0], Dec_lims = [-180.0, 180.0])

    sn_ras = sn_storer.getDataArray('RA')
    sn_decs = sn_storer.getDataArray('DECL') 
    
    plt.scatter(sn_ras, sn_decs)
